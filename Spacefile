# Spacefile Docs: https://go.deta.dev/docs/spacefile/v0
v: 0
micros:
  - name: client
    src: client
    engine: static
    primary: true
    commands:
     - rm -rf node_modules
     - ls -la
    serve: dist
    dev: npm run dev --host
  - name: server
    src: server
    engine: nodejs16
    primary: false
    commands:
     - rm -rf node_modules
     - ls -la
     - npm install
     - npm install yarn
    run: node index.js
    dev: npm run dev
